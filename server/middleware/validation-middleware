 const validator = require('../helper/validation');

const createDistrict = (req, res, next) => {
    const validationRule = {
        "district_name": "required",
        //"addedby": "required",
    }
    validator(req.body, validationRule, {}, (err, status) => {
        if (!status) {
            res.status(412)
                .send({
                    success: false,
                    message: 'Validation failed',
                    data: err
                });
        } else {
            next();
        }
    });
}

